{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    },
    "rootDir": "."
  },
  "exclude": ["packages/**/tests/**", "packages/**/dist/**"],
  "references": [
    {
      "path": "./src/*"
    }
  ]
}
